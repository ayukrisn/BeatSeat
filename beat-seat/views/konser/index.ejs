<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link 
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <style>
      .sidebar {
        background-color: #f8f9fa;
        height: 100vh;
        padding-top: 20px;
      }

      .sidebar .nav-link {
        color: #343a40;
        padding: 10px;
      }

      .sidebar .nav-link:hover {
        background-color: #e9ecef;
      }

      .sidebar .nav-link.active {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
      }

      .sidebar .sidebar-title {
        font-size: 24px;
        font-weight: bold;
        color: #343a40;
        padding: 0 20px;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2 sidebar">
          <div class="sidebar-title">BeatSeat</div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./users">Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link.active" href="#">Konser</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Tiket</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Transaksi</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="auth/logout">Log Out</a>
            </li>
          </ul>
        </div>
        <div class="col-md-10">
          <div class="container mt-5">
            <h2 class="text-center">BEATSEAT - DAFTAR KONSER</h2>
            <div class="row mt-3">
              <!--Alert-->
              <div class="col-auto col-lg-12 mt-2">
                <% if(alert.message != "") { %>
                <div class="alert alert-<%= alert.status %>" role="alert">
                  <%= alert.message %>
                </div>
                <% } %>
              </div>
              <!--Tabel -->
              <div class="col-auto col-lg-12 mt-2"><%- include('table.ejs') %></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Modal -->
    <%- include('add_modal.ejs') %>
    <!-- Edit Modal -->
    <%- include('edit_modal.ejs') %>
    <!--JS-->
    <%- include('js.ejs') %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    <script> 
      // Tampilkan modal dan memanggil tag table yang memiliki id dataTable
      // class button-update di class tag a Edit pada file table.ejs
      $("#dataTable").on("click", ".button-update", function() {
        // buat variabel untuk ambil data pada file table.ejs pada bagian tag a edit
        let id = $(this).data("id");
        let namaKonser = $(this).data("namakonser");
        let kategoriKonser = $(this).data("kategorikonser");
        let deskripsiKonser = $(this).data("deskripsikonser");
        let statusKonser = $(this).data("statuskonser");
        let alamatKonser = $(this).data("alamatkonser");
        let waktuKonser = $(this).data("waktukonser");
        // panggil id edit-modal pada file edit_modal.ejs
        // dan membuat fungsi dari method
        $("#edit-modal").modal("show");
        // Kirim data melalui class di samping form-control tag input
        // dan valuenya mengambil dari tiap let di atas
        $(".id").val(id);
        $(".namaKonser").val(namaKonser);
        $("input[name=kategoriKonser][value=" + kategoriKonser + "]").prop('checked', true);
        $(".deskripsiKonser").val(deskripsiKonser);
        $("input[name=statusKonser][value=" + statusKonser + "]").prop('checked', true);
        $(".alamatKonser").val(alamatKonser);
        $(".waktuKonser").val(waktuKonser);
      });
    </script>
  </body>
</html>
